{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"], // Новые версии
    "module": "ES6",
    "strict": true,
    "noImplicitAny": false, // Лучше поставить true для лучшей типизации, нужно будет типизировать все any
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": false, // Не понял зачем они нужны, типо для отладки
    "outDir": "dist",
    "checkJs": true,
    "incremental": true
  },
  "include": [
    "src/**/*"
  ]
}